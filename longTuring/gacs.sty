\newcommand{\newThmHeads}[3]{ % #3 is the note  font
  \newtheoremstyle{#1definition}
  {5pt}%      Space above
  {5pt}%      Space below
  {}%         Body font
  {}%         Indent amount (empty = no indent, \parindent = para indent)
  {#2}% Thm head font
